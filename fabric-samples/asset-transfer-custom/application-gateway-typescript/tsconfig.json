{
   "extends":"@tsconfig/node14/tsconfig.json",
   "compilerOptions": {
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
       "outDir": "dist",
       "moduleResolution": "node",
       "declaration": true,
       "sourceMap": true,
       "noImplicitAny": true,
       "target": "ES2022",
       "module": "ES2022"
   },
   "include": [
       "./src/**/*"
   ],
   "exclude": [
       "./src/**/*.spec.ts"
   ]
}
